<table id="cart" class="table table-hover table-condensed">
  <thead>
    <tr>
      <th class="w-50"><%= t ".product" %></th>
      <th class="w-10"><%= t ".price" %></th>
      <th class="w-8"><%= t ".quantity" %></th>
      <th class="w-22 text-center"><%= t ".subtotal" %></th>
      <th class="w-10"></th>
    </tr>
  </thead>
  <tbody>
      <%= render partial: "cart_item", collection: @producs_of_current_cart, as: :product %>
  </tbody>
  <tfoot>
    <tr>
      <td>
        <%= link_to root_path, class: "btn btn-warning" do %>
          <i class="fa fa-angle-left"></i> <%= t ".continue_shopping" %>
        <% end %>
      </td>
      <td colspan="2" class="hidden-xs"></td>
      <td class="total_price">
        <span><%= t ".total" %></span>
          <%= t "currency.format", price: sum_total_price_of_cart.sum %>
      </td>
      <td>
        <% unless session[:cart].empty? || session[:cart].size == Settings.quantity.zero %>
          <%= link_to new_order_path(current_user), class: "btn btn-success" do %>
            <%= t ".checkout" %> <i class="fa fa-angle-right"></i>
          <% end %>
        <% end %>
      </td>
    </tr>
  </tfoot>
</table>
