<tr>
  <td data-th="Product">
    <div class="row">
      <div class="col-sm-2 hidden-xs">
        <%= image_tag product.image.url, size: Settings.image.size %>
      </div>
      <div class="col-sm-10">
        <h4 class="nomargin"><%= product.name %></h4>
      </div>
    </div>
  </td>
  <td data-th="Price" class="price"><%= t "currency.format", price: product.price %></td>
  <td data-th="Quantity">
    <input type="number" class="form-control text-center quantity"
      min="<%= Settings.quantity.default %>" max="<%= product.quantity %>"
      value="<%= product.quantity_in_cart %>" data-product="<%= product.id %>">
  </td>
  <td data-th="Subtotal" class="text-center subtotal">
    <%= t "currency.format", price: (product.price * product.quantity_in_cart).to_i%>
  </td>
  <td class="actions" data-th="" class="unit_price">
    <%= link_to remove_cart_path(product), id: "destroy-product", "data-href": remove_cart_path(product),
      class: "btn btn-danger btn-sm" do %>
        <i class="fa fa-trash"></i>
    <% end %>
  </td>
</tr>
<%= javascript_include_tag "cart" %>
