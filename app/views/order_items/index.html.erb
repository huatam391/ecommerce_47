<h1><%= t ".invoice" %></h1>

<div class="container">
  <div  class="row pad-top-botm client-info">
    <div class="col-lg-6 col-md-6 col-sm-6">
      <h4><strong><%= t ".client_info" %></strong></h4>
      <strong><%= t ".name" %></strong><%= current_user.name %>
      <br />
      <b><%= t ".address" %></b><%= current_user.address %>
      <br />
      <b><%= t ".city" %></b><%= current_user.city %>
      <br />
      <b><%= t ".country" %></b><%= current_user.country %>
      <br />
      <b><%= t ".call" %></b><%= t ".code" %><%= current_user.phone %>
    </div>
    <div class="col-lg-6 col-md-6 col-sm-6">
      <h4><strong><%= t ".payment_details" %></strong></h4>
      <b><%= t ".bill_amount" %></b> <%= t ".currency", price: @order.total_price %>
      <br />
      <b><%= t ".purchase_date" %></b><%= l @order.created_at, format: t("date.format.default") %>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12">
      <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
          <thead>
            <tr>
              <th><%= t ".no_number" %></th>
              <th><%= t ".items" %></th>
              <th><%= t ".quantity" %></th>
              <th><%= t ".unit_price" %></th>
              <th><%= t ".sub_total" %></th>
             </tr>
           </thead>
           <tbody>
            <%= render @order_items %>
          </tbody>
        </table>
      </div>
      <div class="ttl-amts">
        <h5> <strong><%=  t ".total_amount" %><%= t ".currency", price: @order.total_price %></strong></h5>
      </div>
    </div>
  </div>
  <div class="row pad-top-botm">
    <div class="col-lg-12 col-md-12 col-sm-12">
      <hr />
      <%= link_to t(".back"), :back, class: "btn btn-primary" %>
      <%= link_to t(".continue_shopping"), root_path, class: "btn btn-warning" %>
    </div>
  </div>
</div>
