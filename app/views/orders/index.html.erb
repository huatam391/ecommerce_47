<% provide :title, t(".order_details") %>
<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <h3><%= t ".order_history" %></h3>
    <hr>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th><%= t ".date" %></th>
          <th><%= t ".order_id" %></th>
          <th><%= t ".order_status" %></th>
          <th><%= t ".order_total" %></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <%= render @orders %>
      </tbody>
    </table>
    <%= will_paginate @products %>
  </div>
</div>
