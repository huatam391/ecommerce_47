<tr>
  <td><%= order.created_at %></td>
  <td><%= order.id %></td>
  <td><%= t "order.status.#{order.status}" %></td>
  <td><%= t ".currency", price: order.total_price %></td>
  <td>
    <%= link_to t(".details"), order_order_items_path(current_user, order), class: "btn btn-primary" %>
    <% if order.in_progress? %>
      <%= link_to cancel_path(order.id), remote: true, method: :put,
        class: "btn btn-danger" do %>
        <%= t ".cancel" %> <i class="fa fa-trash-o"></i>
      <% end %>
    <% end %>
  </td>
</tr>
