<% provide :title, t(".orders_list") %>
<div class="row">
  <div class="col-md-12">
    <h3><%= t ".all_orders_list" %></h3>
    <hr>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>#</th>
          <th><%= t ".customer_name" %></th>
          <th><%= t ".customer_address" %></th>
          <th><%= t ".customer_phone" %></th>
          <th><%= t ".date" %></th>
          <th><%= t ".order_status" %></th>
          <th><%= t ".order_total" %></th>
          <th class="text-center"><%= t ".action" %></th>
        </tr>
      </thead>
      <tbody id="orders">
        <%= render @orders %>
      </tbody>
    </table>
    <%= will_paginate @products %>
  </div>
</div>
